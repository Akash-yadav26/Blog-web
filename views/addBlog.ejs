<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head') %>
  <title>Add New Blog</title>
  <style>
    body {
      background-color: #333446;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .form-wrapper {
      max-width: 600px;
      margin: 4rem auto;
      background-color:white;
      padding: 2.5rem;
      border-radius: 12px;
      box-shadow: 0 6px 18px rgba(0, 0, 0, 0.1);
    }

    h2 {
      text-align: center;
      margin-bottom: 2rem;
      font-weight: 600;
      color: #343a40;
    }

    .form-label {
      font-weight: 500;
    }

    .btn-primary {
      width: 100%;
      padding: 0.6rem;
      font-weight: 500;
      border-radius: 8px;
    }

    .form-control:focus {
      box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
    }
  </style>
</head>

<body>
  <%- include('./partials/nav') %>

  <div class="container">
    <div class="form-wrapper">
      <h2>Add New Blog</h2>
      <form action="/blog" method="post" enctype="multipart/form-data">

        <!-- Cover Image Upload -->
        <div class="mb-3">
          <label for="coverImage" class="form-label">Cover Image</label>
          <input type="file" class="form-control" id="coverImage" name="CoverImage" required>
        </div>

        <!-- Blog Title -->
        <div class="mb-3">
          <label for="title" class="form-label">Blog Title</label>
          <input type="text" class="form-control" id="title" name="title" placeholder="Enter blog title" required>
        </div>

        <!-- Blog Body -->
        <div class="mb-3">
          <label for="body" class="form-label">Body</label>
          <textarea class="form-control" id="body" name="body" rows="8" placeholder="Write your blog content here..." required></textarea>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary">Submit Blog</button>
      </form>
    </div>
  </div>

  <%- include('./partials/scripts') %>
</body>
</html>
